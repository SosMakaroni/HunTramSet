    1: 8;
    8;
}
switch (FEAT_ROADVEHS, SELF, sw_KCSV6_livery_text, cargo_subtype) {
	0: return string(STR_PARAM_COLOUR_SCHEME_1CC);			// 1CC
	1: return string(STR_PARAM_COLOUR_SCHEME_2CC);			// 2CC
	CB_RESULT_NO_TEXT;
}


item(FEAT_ROADVEHS, item_KCSV6) {
	property {
        name:                           string(STR_KCSV6_NAME);
        climates_available:             bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:              date(1997,01,01);
        model_life:                     8;
        vehicle_life:                   20;
        reliability_decay:              80;
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   bitmask(CC_PIECE_GOODS, CC_EXPRESS, CC_REFRIGERATED);
        loading_speed:                  80;
        cost_factor:                    49;
        running_cost_factor:            100;
        /* RV-specific properties */
        sprite_id:                      SPRITE_ID_NEW_ROADVEH; //enable new graphKCSV6
        speed:                          60 km/h;
        misc_flags:                     bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_TRAM);
        refit_cost:                     0; // Refitting is free
        running_cost_base:              RUNNING_COST_ROADVEH;
        power:                          340 kW;
        weight:                         30 ton;
        cargo_capacity:                 164;
		cargo_age_period:				165;
        sound_effect:                   SOUND_SHEEP;
    }
	
	 /* Define graphKCSV6 */
    graphics {
		articulated_part:        		sw_KCSV6_articulated;
		length:                  		sw_KCSV6_length;
		cargo_subtype_text: 			sw_KCSV6_livery_text;
		additional_text: 				string(STR_KCSV6_ADAT);
		purchase:						KCSV6_purchase;
		cargo_capacity: 				sw_KCSV6_capacity;
		purchase_cargo_capacity:		164 / 3;
		default:                 		sw_KCSV6_spriteset;
    }
}
