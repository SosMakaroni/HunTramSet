	sw_KCSV6_1cc_spriteset;
}
switch (FEAT_ROADVEHS, SELF, sw_KCSV6_articulated, extra_callback_info1) {
    1: item_KCSV6;
    CB_RESULT_NO_MORE_ARTICULATED_PARTS;
}
switch (FEAT_ROADVEHS, SELF, sw_KCSV6_capacity, position_in_consist) {
	1: 0;
	164;
}
