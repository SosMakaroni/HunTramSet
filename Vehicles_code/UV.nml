   0x10..0x12: ss_UV_1_2cc_depo; // 0x10 Depot GUI, 0x11 Vehicle Details/Refit GUI, 0x12 Vehicle List
   0x00: sg_UV_1_2cc; // 0x00 Vehicle in game
}
