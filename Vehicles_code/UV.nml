	1: sw_UV_2cc_ss;
	sw_UV_1cc_ss;
}
switch (FEAT_ROADVEHS, SELF, sw_UV_capacity, position_in_consist) {
	return 94;
}
switch (FEAT_ROADVEHS, SELF, sw_UV_length, position_in_consist) {
    return 8;
}
switch (FEAT_ROADVEHS, SELF, sw_UV_livery_text, cargo_subtype) {
	0: return string(STR_COLOUR_SCHEME_1CC);
	1: return string(STR_COLOUR_SCHEME_2CC);
	CB_RESULT_NO_TEXT;
}


