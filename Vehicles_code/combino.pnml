item(FEAT_ROADVEHS, item_combino) {
	property {
        name:                           string(STR_combino_NAME);
        climates_available:             bitmask(CLIMATE_TEMPERATE, CLIMATE_ARCTIC, CLIMATE_TROPICAL);
        introduction_date:              date(1968,01,01);
        model_life:                     22;
        vehicle_life:                   40;
        reliability_decay:              80;
        refittable_cargo_classes:       bitmask(CC_PASSENGERS);
        non_refittable_cargo_classes:   bitmask(CC_PIECE_GOODS, CC_EXPRESS, CC_REFRIGERATED);
        loading_speed:                  100;
        cost_factor:                    98;
        running_cost_factor:            190;
        /* RV-specific properties */
        sprite_id:                      SPRITE_ID_NEW_ROADVEH; //enable new graphics
        speed:                          55 km/h;
        misc_flags:                     bitmask(ROADVEH_FLAG_2CC, ROADVEH_FLAG_TRAM);
        refit_cost:                     0; // Refitting is free
        running_cost_base:              RUNNING_COST_ROADVEH;
        power:                          180 kW;
        weight:                         34 ton;
        cargo_capacity:                 200;
		cargo_age_period:				165;
        sound_effect:                   SOUND_SHEEP;
    }
	
	 /* Define graphics */
    graphics {
		articulated_part:        		sw_combino_articulated;
		length:                  		sw_combino_length;
		cargo_subtype_text: 			sw_combino_livery_text;
		additional_text: 				string(STR_combino_ADAT);
		purchase:						combino_purchase;
		cargo_capacity: 				sw_combino_capacity;
		purchase_cargo_capacity:		380 / 6;
		default:                 		sw_combino_spriteset;
    }
}
